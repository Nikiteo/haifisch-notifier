{
	"compilerOptions": {
		"target": "es2022",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"strict": true,
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true

	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
